{
    "name": "frontend",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "start": "npm run dev",
        "dev": "vite",
        "dev:server-watch": "concurrently \"npm run dev\" \"npm run json-server:node-watch\"",
        "dev:py-backend": "cross-env npm run dev",
        "build": "vite build",
        "build:prod": "cross-env npm run build",
        "build:django-prod": "npx rimraf ../backend/frontend/ && cross-env DJANGO_BUILD=true npm run build",
        "build:django-dev": "npx rimraf ../backend/frontend/ && cross-env DJANGO_BUILD=true npm run build",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "build:preview": "npm run build && npm run preview",
        "build:json-server": "npm run build && npm run json-server:node",
        "json-server": "json-server -w mock/db.json",
        "json-server:node": "cross-env MAIN_URL=http://localhost:3000 node mock/server.js",
        "json-server:node-watch": "cross-env MAIN_URL=http://localhost:3000 npx nodemon --exec node mock/server.js"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.2.1",
        "bcrypt": "^5.1.1",
        "concurrently": "^8.2.2",
        "date-fns": "^3.6.0",
        "dotenv": "^16.4.5",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.1.0",
        "react-router-dom": "^6.22.3",
        "rsuite": "^5.56.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@vitejs/plugin-react": "^4.2.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.34.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "json-server": "^0.17.4",
        "rimraf": "^5.0.5",
        "validator": "^13.11.0",
        "vite": "^5.1.6"
    }
}
